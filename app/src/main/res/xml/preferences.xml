<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android">
    <PreferenceCategory
        android:title="Decoding server">
        <SwitchPreference
            android:key="pref_online_decoding_enabled"
            android:title="Online decoding of tags"
            android:defaultValue="false">
        </SwitchPreference>

        <EditTextPreference
            android:key="pref_decoding_server_url"
            android:title="Decoding server URL"
            android:hint="http://www.example.com/decode">
        </EditTextPreference>
    </PreferenceCategory>
    <PreferenceCategory
        android:title="Export data">
        <Preference
            android:key="pref_export_database"
            android:title="Export all tags as SQLite">
        </Preference>
    </PreferenceCategory>
</PreferenceScreen>